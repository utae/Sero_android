<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="#00909d"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:paddingTop="24dp"
    android:id="@+id/signupFormContainer">
    
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="56dp">

        <ImageButton
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@null"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:scaleType="fitXY"
            android:src="@drawable/btn_back_white"
            android:id="@+id/signupBackButton"/>
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:background="@null"
            android:layout_marginRight="14dp"
            android:text="Policy"
            android:textSize="17sp"
            android:textColor="#ffffff"
            android:id="@+id/signupPolicy"/>
        
    </FrameLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:gravity="center"
        android:text="Sign up"
        android:textSize="19sp"
        android:textColor="#ffffff"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_marginBottom="8dp"
                android:gravity="center_vertical"
                android:background="@drawable/bg_form_edittext"
                android:id="@+id/signupInputNameContainer">

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="Name"
                    android:textColorHint="#80000000"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:inputType="textPersonName"
                    android:id="@+id/signupInputName"/>

                <ImageButton
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:background="@null"
                    android:scaleType="fitXY"
                    android:visibility="invisible"
                    android:id="@+id/signupNameStatusButton"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/bg_form_edittext"
                android:gravity="center_vertical"
                android:id="@+id/signupInputNickNameContainer">

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="User Name"
                    android:textColorHint="#80000000"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:inputType="text"
                    android:maxLines="1"
                    android:id="@+id/signupInputNickName"/>

                <ImageButton
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:background="@null"
                    android:scaleType="fitXY"
                    android:visibility="invisible"
                    android:id="@+id/signupNickNameStatusButton"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_marginBottom="8dp"
                android:gravity="center_vertical"
                android:background="@drawable/bg_form_edittext"
                android:id="@+id/signupInputEmailContainer">

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="Email"
                    android:textColorHint="#80000000"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:inputType="textEmailAddress"
                    android:id="@+id/signupInputEmail"/>

                <ImageButton
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:background="@null"
                    android:scaleType="fitXY"
                    android:visibility="invisible"
                    android:id="@+id/signupEmailStatusButton"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_marginBottom="8dp"
                android:gravity="center_vertical"
                android:background="@drawable/bg_form_edittext"
                android:id="@+id/signupInputPWContainer">

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="Password"
                    android:textColorHint="#80000000"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:inputType="textPassword"
                    android:id="@+id/signupInputPW"/>

                <ImageButton
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:background="@null"
                    android:scaleType="fitXY"
                    android:visibility="invisible"
                    android:id="@+id/signupPWStatusButton"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_marginBottom="20dp"
                android:gravity="center_vertical"
                android:background="@drawable/bg_form_edittext"
                android:id="@+id/signupInputPWConfirmContainer">

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="Password confirm"
                    android:textColorHint="#80000000"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:inputType="textPassword"
                    android:id="@+id/signupInputPWConfirm"/>

                <ImageButton
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:background="@null"
                    android:scaleType="fitXY"
                    android:visibility="invisible"
                    android:id="@+id/signupPWConfirmStatusButton"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:text="Gender"
                android:textSize="16sp"
                android:textColor="#ffffff"/>

            <RadioGroup
                android:id="@+id/signupGenderRadioGroup"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="20dp"
                android:background="@null"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/signupMaleRadioButton"
                    android:background="@drawable/bg_toggle_button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginRight="16dp"
                    android:button="@null"
                    android:gravity="center"
                    android:text="Male"
                    android:textSize="15sp"
                    android:textColor="@color/toggle_button_text" />

                <RadioButton
                    android:id="@+id/signupFemaleRadioButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bg_toggle_button"
                    android:button="@null"
                    android:gravity="center"
                    android:text="Female"
                    android:textSize="15sp"
                    android:textColor="@color/toggle_button_text" />

            </RadioGroup>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:text="Birth"
                android:textSize="16sp"
                android:textColor="#ffffff"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Select"
                android:textSize="16sp"
                android:textColor="@color/toggle_button_text"
                android:background="@drawable/bg_toggle_button"
                android:id="@+id/signupBirthSelectButton"/>

            <Button
                android:layout_width="328dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                android:text="Sign up"
                android:textSize="14sp"
                android:textColor="#ffffff"
                android:background="@drawable/bg_form_complete_button"
                android:id="@+id/signupButton"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>