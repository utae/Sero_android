<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="24dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#00909d">

        <ImageButton
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:background="@null"
            android:scaleType="fitXY"
            android:src="@drawable/btn_back_white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Setting"
            android:textSize="17sp"
            android:textColor="#ffffff"/>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#f5f5f5">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:gravity="center_vertical"
            android:text="Sign Out"
            android:textSize="16sp"
            android:textColor="#000000"
            android:id="@+id/settingSignOut"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:background="#80000000" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:gravity="center_vertical"
            android:text="Change Password"
            android:textSize="16sp"
            android:textColor="#000000"
            android:id="@+id/settingChangePassword"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:background="#80000000" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:gravity="center_vertical"
            android:text="Facebook Connect : Offline"
            android:textSize="16sp"
            android:textColor="#000000"
            android:id="@+id/settingFbConnect"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:background="#80000000" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:gravity="center_vertical"
            android:text="Tutorial"
            android:textSize="16sp"
            android:textColor="#000000"
            android:id="@+id/settingTutorial"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:background="#80000000" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:gravity="center_vertical"
            android:textSize="16sp"
            android:textColor="#000000"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:background="#80000000" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:gravity="center_vertical"
            android:text="Terms of Use"
            android:textSize="16sp"
            android:textColor="#000000"
            android:id="@+id/settingTerms"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:background="#80000000" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:gravity="center_vertical"
            android:text="Privacy Policy"
            android:textSize="16sp"
            android:textColor="#000000"
            android:id="@+id/settingPrivacyPolicy"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:background="#80000000" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:gravity="center_vertical"
            android:text="Open Source Library"
            android:textSize="16sp"
            android:textColor="#000000"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:background="#80000000" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:gravity="center_vertical"
            android:text="Feedback : info@sero.tv"
            android:textSize="16sp"
            android:textColor="#80000000"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:background="#80000000" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:gravity="center_vertical"
            android:text="version 1.0.2"
            android:textSize="15sp"
            android:textColor="#80000000"/>

    </LinearLayout>

</LinearLayout>