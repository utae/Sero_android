<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <View
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:background="#00909d" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#00909d">

        <ImageButton
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:background="@null"
            android:scaleType="fitXY"
            android:src="@drawable/btn_back_white"
            android:id="@+id/uploadFormBackButton"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Upload"
            android:textSize="17sp"
            android:textColor="#ffffff"/>

    </FrameLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingLeft="16dp"
        android:paddingBottom="5dp"
        android:gravity="bottom"
        android:text="Title"
        android:textSize="14sp"
        android:textColor="#000000"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="#80ffffff" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:paddingTop="16dp"
        android:paddingLeft="16dp"
        android:hint="Write hashtag and introduction of your video"
        android:textColorHint="#80000000"
        android:textSize="17sp"
        android:textColor="#000000"
        android:id="@+id/uploadFormEditText"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="#80ffffff" />

    <ImageButton
        android:layout_width="172dp"
        android:layout_height="29dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:layout_gravity="right"
        android:background="@drawable/bg_upload_form_savetomydevice"
        android:scaleType="fitXY"
        android:id="@+id/uploadFormSaveToMyDevice"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingLeft="16dp"
        android:paddingBottom="5dp"
        android:gravity="bottom"
        android:text="Share"
        android:textSize="17sp"
        android:textColor="#000000"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="16dp">

        <ImageButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:scaleType="fitXY"
            android:background="@null"
            android:src="@drawable/btn_upload_form_facebook"/>

    </LinearLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <Button
        android:layout_width="328dp"
        android:layout_height="50dp"
        android:layout_marginBottom="16dp"
        android:layout_gravity="center_horizontal"
        android:background="#fb991b"
        android:text="Upload"
        android:textSize="14sp"
        android:textColor="#ffffff"
        android:id="@+id/uploadFormUpload"/>

</LinearLayout>