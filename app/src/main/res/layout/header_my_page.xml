<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:paddingTop="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="86dp"
        android:orientation="horizontal">

        <net.videofactory.new_audi.custom_view.loading_image_view.CircleLoadingImageView
            android:layout_width="86dp"
            android:layout_height="86dp"
            android:background="@null"
            app:civ_border_color="#1a000000"
            app:civ_border_width="0.6dp"
            android:id="@+id/myProfileImg"/>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical|right"
            android:gravity="center_horizontal"
            android:layout_marginRight="17dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="21sp"
                android:textColor="#000000"
                android:layout_marginBottom="8dp"
                android:id="@+id/myVideoCount"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="#99000000"
                android:text="Videos"/>

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="27dp"
            android:background="#99000000"
            android:layout_gravity="center_vertical"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical|right"
            android:gravity="center_horizontal"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="17dp"
            android:id="@+id/myFollowerContainer">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="21sp"
                android:textColor="#000000"
                android:layout_marginBottom="8dp"
                android:id="@+id/myFollowerCount"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="#99000000"
                android:text="Followers"/>

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="27dp"
            android:background="#99000000"
            android:layout_gravity="center_vertical"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical|right"
            android:gravity="center_horizontal"
            android:layout_marginLeft="17dp"
            android:id="@+id/myFollowingContainer">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="21sp"
                android:textColor="#000000"
                android:layout_marginBottom="8dp"
                android:id="@+id/myFollowingCount"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="#99000000"
                android:text="Following"/>

        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="21sp"
            android:textColor="#000000"
            android:id="@+id/myNickName"/>

        <Button
            android:layout_width="114dp"
            android:layout_height="28dp"
            android:layout_gravity="center_vertical|right"
            android:text="EDIT PROFILE"
            android:textSize="13sp"
            android:textColor="#ffffff"
            android:background="#cccccc"
            android:id="@+id/myEditProfile"/>

    </FrameLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:layout_marginBottom="8dp"
        android:id="@+id/myIntro"/>

</LinearLayout>