<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextureView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/cameraTextureView"/>

    <ProgressBar
        android:id="@+id/cameraProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="invisible"/>

    <ImageButton
        android:id="@+id/cameraTransitionButton"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:src="@drawable/btn_camera_transition"
        android:layout_gravity="top|right"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:scaleType="fitXY"
        android:background="@null"/>

    <ImageButton
        android:id="@+id/cameraFlashButton"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:src="@drawable/btn_camera_flash_off"
        android:layout_gravity="top|left"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:scaleType="fitXY"
        android:background="@null"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="#b3ffffff"
        android:layout_gravity="bottom">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="7dp"
            android:orientation="horizontal"
            android:layout_gravity="top"
            android:background="#E6ffffff"
            android:id="@+id/cameraClipContainer" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:text="00:00"
            android:textColor="#000000"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="18dp"
            android:id="@+id/cameraRecordDuration"/>

        <ImageButton
            android:id="@+id/cameraRecordingButton"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:layout_marginBottom="16dp"
            android:layout_gravity="bottom|center_horizontal"
            android:src="@drawable/btn_recording_start"
            android:scaleType="fitXY"
            android:background="@null"/>

        <ImageButton
            android:id="@+id/cameraDeleteButton"
            android:layout_width="95dp"
            android:layout_height="30dp"
            android:src="@drawable/btn_camera_delete"
            android:layout_gravity="right"
            android:layout_marginTop="17dp"
            android:layout_marginRight="16dp"
            android:scaleType="fitXY"
            android:background="@null"
            android:visibility="invisible"/>

        <ImageButton
            android:id="@+id/cameraGalleryButton"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:src="@drawable/btn_camera_gallery"
            android:layout_marginTop="17dp"
            android:layout_marginLeft="16dp"
            android:scaleType="fitXY"
            android:background="@null"/>

        <TextView
            android:id="@+id/cameraCancelButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@null"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="10dp"
            android:text="Cancel"
            android:textSize="16sp"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/cameraEditButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:background="@null"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="10dp"
            android:text="Done"
            android:textSize="16sp"
            android:textColor="#000000"/>

    </FrameLayout>

</FrameLayout>